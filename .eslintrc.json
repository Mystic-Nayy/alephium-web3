{
  "plugins": ["security"],
  "extends": ["prettier", "plugin:security/recommended"],
  "parserOptions": {
    "project": "tsconfig.json",
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "parser": "@typescript-eslint/parser",
  "overrides": [
    {
      "files": [ "*.ts" ],
      "rules": {
        "security/detect-non-literal-fs-filename": "off"
      }
    }
  ]
}
