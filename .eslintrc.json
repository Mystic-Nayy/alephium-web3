{
  "plugins": ["security", "header"],
  "extends": ["prettier", "plugin:security/recommended"],
  "parserOptions": {
    "project": "tsconfig.json",
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "parser": "@typescript-eslint/parser",
  "rules": {
    "header/header": [2, "scripts/header.js"]
  },
  "overrides": [
    {
      "files": ["*.ts"],
      "rules": {
        "security/detect-non-literal-fs-filename": "off"
      }
    }
  ]
}
